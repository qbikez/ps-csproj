        {
            "taskName": "build",
            "args": [
                "Invoke-Pester ${file}"
            ],
            "isBuildCommand": true,
            "suppressTaskName": true,
            "problemMatcher": [
                {
                    "owner": "pester",
                    "severity": "error",
                    "pattern": [
                        {
                            "regexp": "^\\s*\\[([-])\\]\\s+(.*)\\s+.*$",
                            "message": 2
                        },
                        {
                            "regexp": "(.*)",
                            "message": 1
                        },
                        {
                            "regexp": "^.*\\:\\s*(\\d+)\\s*in\\s*(.*)\\s*$",
